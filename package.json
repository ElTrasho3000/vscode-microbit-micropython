{
  "name": "vscode-microbit-micropython",
  "displayName": "micropython-for-microbit",
  "description": "Make easy to use MicroPython on micro:bit with VScode",
  "version": "0.0.1",
  "preview": true,
  "author": {
    "url": "https://github.com/makinteract",
    "email": "andrea@kaist.id",
    "name": "Andrea Bianchi"
  },
  "publisher": "MAKinteract",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "repository": {
    "type": "Git",
    "url": "https://github.com/makinteract/vscode-microbit-micropython"
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:extension.init-microbit",
    "onCommand:extension.init-sketch",
    "onCommand:extension.flash-sketch",
    "onLanguage:python",
    "onDebug"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.init-sketch",
        "category": "uBit",
        "title": "Initialize MicroPython sketch"
      },
      {
        "command": "extension.init-microbit",
        "category": "uBit",
        "title": "Install MicroPython on micro:bit"
      },
      {
        "command": "extension.flash-sketch",
        "category": "uBit",
        "title": "Flash sketch on micro:bit"
      }
    ],
    "keybindings": [
      {
        "command": "extension.flash-sketch",
        "key": "ctrl+f5",
        "mac": "cmd+f5",
        "when": "editorTextFocus"
      }
    ]
  },
  "keywords": [
    "micro:bit",
    "micropython",
    "python",
    "MicroBit"
  ],
  "scripts": {
    "lint": "eslint .",
    "build": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "git-clone": "^0.1.0",
    "path": "^0.12.7"
  }
}
